<% @stories.each do |story| %>
    <div class="story">

      <%= button_to story, method: :get, :class => 'button-comment' do %>
          <span class="glyphicon glyphicon-comment"></span>
          <%= story.comments.length %>
      <% end %>
      <div class="story-container">
        <h2><%= story.title %></h2>
        <p><%= story.story %></p>
        <p>Love, </p>
        <p><%= story.user.username %></p>
      </div>
    </div>
<% end %>
